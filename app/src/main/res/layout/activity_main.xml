<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/select_game_mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true">
    <Button
        android:id="@+id/bank_job_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/bank_job"/>
    <Button
        android:id="@+id/free_chat_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/free_chat"/>
    <Button
        android:id="@+id/teach_mode_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/teach_mode"/>
    </LinearLayout>
</RelativeLayout>